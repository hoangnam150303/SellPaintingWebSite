@using Microsoft.AspNetCore.Identity
@using SellPainting.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    var UserID = UserManager.GetUserId(User);
    var user = await UserManager.FindByIdAsync(UserID);
    
    <a  asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @user.FirstName @user.FamilyName </a>


        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-white border-0">Logout</button>
        </form>

}
else
{

        <a id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>


        <a  id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>

}

