@page
@using SellPainting.Models
@inject SignInManager<ApplicationUser> SignInManager
@model LoginModel


<link href="~/css/login&register.css" rel="stylesheet" />

<div class="wrapper">
   <form method="post">
       <h1>Login</h1>
       <div class="input-box">
            <input asp-for="Input.Email" type="text"  aria-required="true" placeholder="name@example.com" />
            <i class="bi bi-person-fill"></i>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
       </div>
        <div class="input-box">
            <input asp-for="Input.Password" type="password" aria-required="true" placeholder="password" />
            <i class="bi bi-lock-fill"></i>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="remember-forgot">
            <label><input type="checkbox" />Remember me</label>
            <a asp-page="./ForgotPassword">Forgot password</a>
        </div>

        <button type="submit" class="btn">Login</button>
        
        <div class="register-link">
            <p>Don't have an account? 
                <a asp-page="./Register">Register</a>
            </p>
            
        </div>
   </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
