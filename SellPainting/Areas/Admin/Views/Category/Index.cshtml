@model List<Category>
<partial name="_Notification" />
<div class="head">
    <h1>Category List</h1>
    <button><a asp-action="Create">Create category</a></button>
</div>
 
<br />
<table class="table table-hover">

    <thead>
        <tr>
           <td>Name</td>
           <td></td>
        </tr>
    </thead>

    <tbody>
        @foreach(var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td> 
                    <a asp-action="Edit" asp-controller="Category" asp-route-id="@category.Id" >Edit</a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id" >Delete</a>
                </td>
            </tr>    
        }
    </tbody>
</table>

<style>
    .head{
        margin-top:100px;
        margin-right:90px;
    }

    .head h1{
        color: white;
    }
    
    table thead tr td{
        color:white;
        font-size:30px;
    }

    table tbody tr td{
        color:white;
    }

    button{
        background-color:lightslategray;
    }

    button a{
        text-decoration:none;
        color: white;
    }
</style>